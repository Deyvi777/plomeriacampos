---
import BaseLayout from "@layouts/BaseLayout.astro";
import { SITE } from "@/config";

const description = `Contáctanos para más información sobre nuestros servicios.`;
const URL = Astro.url.href;
---

<BaseLayout
    title="Contáctanos"
    description={description}
    structuredData={{
        "@context": "https://schema.org",
        "@type": "WebPage",
        inLanguage: "es-BO",
        "@id": URL,
        url: URL,
        name: `Contáctanos - ${SITE.title}`,
        description: description,
        isPartOf: {
            "@type": "WebSite",
            url: SITE.url,
            name: SITE.title,
            description: SITE.description,
        },
    }}
/>
